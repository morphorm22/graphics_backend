{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
        "prefer-destructuring": ["error", {"object": true, "array": false}],
        "arrow-body-style": ["error", "as-needed"],
        "new-cap": ["error", { "capIsNew": false }]
    }
}
